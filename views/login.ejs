  <style>
@import url('https://fonts.googleapis.com/css?family=Roboto+Condensed:700');

body {
  margin: 0;
  padding: 0;
  font-family: 'Roboto Condensed', sans-serif;
  letter-spacing: 1px;
}

section {
  width: 100%;
  height: 100vh;
  background-image: 
    linear-gradient(rgba(0, 34, 76, 0.9), rgba(0, 34, 76, 0.9)),
