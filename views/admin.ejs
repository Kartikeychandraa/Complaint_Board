<div class="r" id="r">
  <h1 style="text-align: center;">These are your some complaints</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="table-responsive">
        <table summary="This table shows how to create responsive tables using Bootstrap's default functionality" class="table table-bordered table-hover">
          <caption class="text-center">Lets solve these issue`s</caption>
          <thead>
            <tr>
              <th>Complaint Id</th>
              <th>User Id</th>
              <th>Date of Incident</th>
              <th>Subject</th>
              <th>Summary</th>
              <th>location</th>
              <th>current-status</th>
              <th>Delete Complaints</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% for(var i =0; i< data2.length ; i++) { %>
              <td><%= data2[i]._id %></td>
              <td><%= data2[i].userid %></td>
              <td><%= data2[i].doi %></td>
              <td><%= data2[i].subject %></td>
              <td><%= data2[i].summary %></td>
              <td><%= data2[i].location %></td>
              <td><%= data2[i].status %></td>
              <td><form method="POST" action="/delete_complaint/<%= data2[i]._id%>"><input type="submit" name="" value="DELETE" class="btn btn-danger"></form></td>
              
              <td><form method="POST" action="/change_status_active/<%= data2[i]._id%>"><input type="submit" class="btn btn-light" value="ACTIVE"></form></td>
              <td><form method="POST" action="/change_status_resolved/<%= data2[i]._id%>"><input type="submit" class="btn btn-light" value="RESOLVED"></form></td>
            </tr>
            <% } %>
          </tbody>
          <tfoot>
            <tr>
              <td colspan="5" class="text-center">Data retrieved</td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
